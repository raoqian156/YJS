<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10dp">

        <TextView
            android:layout_width="@dimen/width_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="原密码"
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/et_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/room_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/text_white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10dp">

        <TextView
            android:layout_width="@dimen/width_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="新密码"
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/et_new_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码(6-12)"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/room_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10dp">

        <TextView
            android:layout_width="@dimen/width_100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确定密码"
            android:textColor="@color/text_black" />

        <EditText
            android:id="@+id/et_new_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入确定密码"
            android:inputType="textPassword"
            android:textColor="@color/text_black"
            android:textColorHint="@color/room_gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/padding_20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_btn_press"
        android:focusable="true"
        android:gravity="center"
        android:nextFocusDown="@id/et_user"
        android:padding="8dp"
        android:text="保存"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_big" />
</LinearLayout>