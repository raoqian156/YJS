<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40dp"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:gravity="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View style="@style/Space" />

            <TextView
                android:id="@+id/ck_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/selector_checkbox"
                android:gravity="center"
                android:drawablePadding="@dimen/padding_10dp"
                android:padding="@dimen/padding_pop_left_right" />

            <View style="@style/Space" />

            <TextView
                android:id="@+id/ck_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_10dp"
                android:drawableLeft="@drawable/selector_checkbox"
                android:gravity="center"
                android:padding="@dimen/padding_pop_left_right" />

            <View style="@style/Space" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/VerticalLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <EditText
            android:id="@+id/tv_input_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入条码"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>